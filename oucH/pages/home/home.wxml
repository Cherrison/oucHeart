    <view class="cu-custom" style="height:130rpx;">
      <view class="cu-bar fixed bg-gradual-pink" style="height:130rpx;padding-top:10px;">
        <text style='font-weight:bolder;margin-left:340rpx;margin-top:50rpx;'>首页</text>
